<div id="main">
  <ul id="subsections">
    <% @info_subsections.each do |info_subsection| %>
      <li>
        <%= image_tag info_subsection.file_thumb %>
        <%= info_subsection.content %>
        <%= link_to t(:show), info_subsection if can? :show, info_subsection %>
        <%= link_to t(:edit), edit_info_subsection_path(info_subsection) if can? :edit, info_subsection %>
        <%= link_to t(:del), info_subsection, :confirm => sure?, :method => :delete if can? :destroy, info_subsection %>
      </li>
    <% end %>
  </ul>

  <div id="bottom_links">
    <%= link_to new(:info_subsection),
    new_info_subsection_path if can? :new, InfoSubsection %>
  </div>
</div>
