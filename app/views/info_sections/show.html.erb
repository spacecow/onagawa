<%= content_for(:head) do %>
  <%= javascript_include_tag "info" %>
<% end %>

<% unless @info_subsections.empty? %>
  <%= render @info_subsection %>
<% end %>

<div id="footer">
  <% @info_subsections.each do |subsection| %>
    <%= link_to(image_tag(subsection.file_thumb), info_section_path(@info_section, :pos => subsection.pos)) %>
  <% end %>
</div>

<div id="bottom_links">
  <%= link_to edit(:info_section), edit_info_section_path(@info_section) if can? :edit, InfoSection %>
  <%= link_to list(:subsection), info_section_info_subsections_path(@info_section) if can? :index, InfoSubsection %>
</div>
