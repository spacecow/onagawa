<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "OnagawaFISH" %></title>
    <%= stylesheet_link_tag 'screen.css', :media => 'screen, projection' %>
    <%= stylesheet_link_tag 'print.css', :media => 'print' %>
    <!--[if lt IE 8]>
      <%= stylesheet_link_tag 'ie.css', :media => 'screen, projection' %>
    <![endif]-->
    <%= stylesheet_link_tag "application", "formtastic" %>
    <%= javascript_include_tag "jquery", "jquery_ujs", "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <div class="clear"></div>
      <div id="header">
        <%= image_tag 'onagawa_header.gif' %>
      </div>
      <div id="contents">
        <div id="user_nav">
          <% if current_user %>
            <%= t('message.welcome',:user=>current_user.username) %>
            <%= t('message.not_you?') %>
            <%= link_to t(:log_out), logout_path %>
          <% elsif false %>
            <%= link_to t(:sign_up), signup_path %><%= t(:or) %><%= link_to t(:log_in), login_path %>
          <% end %>
        </div>
        <%= content_tag :h1, yield(:title) if show_title? %>
        <div id="main_container">
          <div id="menu">
            <%= link_to "Info", info_path %>
            <%= link_to "Contact", new_message_path %>
            <%= link_to "Order", new_order_path %>
          </div>
          <% unless @infosections.nil? %>
          <div id="submenu">
            <% @infosections.each do |infosection| %>j
              <%= link_to infosection.title, infosection %>
            <% end %>
          </div>
          <% end %>
          <%= yield %>
        </div>
        <div id="image_container"></div>
        <div id="form_container">
          <%= semantic_form_for @order do |f| %>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :card_type, :as => :select, :collection => [["Visa","visa"],["MasterCard","master"],["Discover","discover"],["American Express","american_express"]] %>
            <%= f.input :card_number %>
            <%= f.input :card_verification %>
            <%= f.input :card_expires_on, :discard_day => true, :start_year => Date.today.year, :end_year => Date.today.year+10, :add_month_numbers => true %>
            <%= f.input :quantity %>
            <%= f.submit "Purchase", :class => :submit %>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
